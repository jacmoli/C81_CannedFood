<!-- Standard cans and advanced (preserving) cans -->
	<ThingDef Name="C81_Cans" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<tickerType>Rare</tickerType>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>150</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<socialPropernessMatters>true</socialPropernessMatters>  
		<statBases>
			<Beauty>-4</Beauty>
			<MaxHitPoints>80</MaxHitPoints>
			<Flammability>0.2</Flammability>
			<DeteriorationRate>20</DeteriorationRate>
			<Mass>0.1</Mass>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
	</ThingDef>

	<ThingDef Name="C81_StdCan" ParentName="C81_Cans">
		<defName>C81_StdCan</defName>
		<label>Standard steel can</label>
		<description>An empty steel can ready to store ingredients.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>stdcanE_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>1.0</MarketValue>
		</statBases>	

		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>

	</ThingDef>

	<ThingDef Name="C81_AdvCan" ParentName="C81_Cans">
		<defName>C81_StdCan</defName>
		<label>Advanced steel can</label>
		<description>An empty steel can ready to store and long-term preserve ingredients.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>advcanE_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>1.5</MarketValue>
		</statBases>

		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>		
		
	</ThingDef>

	
<!-- Basic canned food definition (HP, stacks, nutrition etc) -->
	<ThingDef Name="C81_CannedFood" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<tickerType>Rare</tickerType>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>150</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<socialPropernessMatters>true</socialPropernessMatters>  
		<statBases>
			<Beauty>-4</Beauty>
			<MaxHitPoints>80</MaxHitPoints>
			<Nutrition>0.25</Nutrition>
			<Flammability>0.2</Flammability>
			<DeteriorationRate>20</DeteriorationRate>
			<Mass>0.1</Mass>
			<FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
		</statBases>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<tasteThought>AteRawFood</tasteThought>
		</ingestible>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_FoodPoisonable" />
		</comps>
	</ThingDef>


<!-- Canned food definitions by type (is it meat or vegs?) -->
	<ThingDef Name="C81_CannedMeatBase" ParentName="C81_CannedFood" Abstract="True">
		<ingestible>
			<ingestEffect>EatMeat</ingestEffect>
			<ingestSound>RawMeat_Eat</ingestSound>
			<foodType>Meat</foodType>
		</ingestible>
	
		<thingCategories>
			<li>MeatRaw</li>
		</thingCategories>  
	</ThingDef>

	<ThingDef Name="C81_CannedVegsBase" ParentName="C81_CannedFood" Abstract="True">
		<ingestible>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>RawVegetable_Eat</ingestSound>
			<foodType>VegetableOrFruit</foodType>
		</ingestible>
	
		<thingCategories>
			<li>PlantFoodRaw</li>
		</thingCategories>  
	</ThingDef>


<!-- Canned food items (name, desc, value, rotting time, graphics) -->	
	<ThingDef Name="C81_CannedMeatRaw" ParentName="C81_CannedMeatBase">
		<defName>CannedMeatRaw</defName>
		<label>Canned meat</label>
		<description>A steel can containing meat chops for cooking.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>stdcanM_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>8.0</MarketValue>
		</statBases>	
		
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>30</daysToRotStart>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Name="C81_CannedVegsRaw" ParentName="C81_CannedVegsBase">
		<defName>CannedVegsRaw</defName>
		<label>Canned vegetables</label>
		<description>A steel can containing dried vegetables for cooking.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>stdcanV_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>4.0</MarketValue>
		</statBases>	
		
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
			</li>
		</comps>
	</ThingDef>  

	
	<ThingDef Name="C81_PreservedMeatRaw" ParentName="C81_CannedMeatBase">
		<defName>PresMeatRaw</defName>
		<label>Preserved meat</label>
		<description>A steel can containing meat chops for cooking, seasoned for longer preservation.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>advcanM_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>12.0</MarketValue>
		</statBases>	
	</ThingDef>

	<ThingDef Name="C81_PreservedVegsRaw" ParentName="C81_CannedVegsBase">
		<defName>PresVegsRaw</defName>
		<label>Preserved vegetables</label>
		<description>A steel can containing dried vegetables for cooking, seasoned for longer preservation.</description>
    
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>advcanV_A</texPath>
		</graphicData>

		<statBases>
			<MarketValue>6.0</MarketValue>
		</statBases>	
	</ThingDef>  
  
  
<!-- Food canning benches -->  

	<ThingDef Name="C81_FoodBenchBase" ParentName="BenchBase" Abstract="True">
		<thingClass>Building_WorkTable</thingClass>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<constructEffect>ConstructMetal</constructEffect>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>1000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(3,1)</size>		<!-- FARE -->
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<researchPrerequisites>
			<li>C81_CanningTech</li>
		</researchPrerequisites>
	</ThingDef>
  
	<ThingDef Name="C81_StdCanningBench" ParentName="BenchBase">
		<defName>C81_StdCanningBench</defName>
		<label>Standard canning bench</label>
		<description>A standard press optimized for food canning.</description>

		<graphicData>		<!-- FARE -->
			<texPath>Things/Building/Production/TableStoveFueled</texPath> 
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<recipes>
			<li>C81_CanMeatX1</li>
			<li>C81_CanMeatX4</li>
			<li>C81_CanVegsX1</li>
			<li>C81_CanVegsX4</li>
		</recipes>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>160.0</fuelConsumptionRate>
				<fuelCapacity>50.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>C81_StdCan</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
		</comps>
	</ThingDef>
  
	<ThingDef Name="C81_AdvCanningBench" ParentName="BenchBase">
		<defName>C81_AdvCanningBench</defName>
		<label>Advanced canning and preservation bench</label>
		<description>A standard press optimized and sterilized for long term food canning.</description>

		<graphicData>		<!-- FARE -->
			<texPath>Things/Building/Production/TableStoveFueled</texPath> 
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
			<Steel>150</Steel>
			<Silver>50</Silver>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<recipes>
			<li>C81_PresMeatX1</li>
			<li>C81_PresMeatX4</li>
			<li>C81_PresVegsX1</li>
			<li>C81_PresVegsX4</li>
		</recipes>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>160.0</fuelConsumptionRate>
				<fuelCapacity>50.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>C81_StdCan</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
		</comps>
	</ThingDef>
  
</Defs>